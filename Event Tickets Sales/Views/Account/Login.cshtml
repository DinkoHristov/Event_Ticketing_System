@model LoginUserFormModel

@{
    ViewData["Title"] = "Login";
}

<form asp-controller="Account" asp-action="Login" method="post">

    <h3 class="text-center">Login</h3>
    <div class="container col-sm-6 col-md-6 col-lg-3 col-xl-4">

        @if (ViewBag.UserNotFound != null)
        {
            <div class="alert alert-danger text-center" role="alert">
                <p>User not found!</p>
            </div>
        }

        <hr />
        <div class="form-group text-center">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" type="text" class="form-control" placeholder="Enter username...">
            <span asp-validation-for="Username" class="form-group text-danger"></span>
        </div>
        <div class="form-group text-center">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter password...">
            <span asp-validation-for="Password" class="form-group text-danger"></span>
        </div>

        <hr />
        <div class="check-inline text-center">
            <input asp-for="IsRemembered" type="checkbox" class="form-check-input">
            <label class="form-label" asp-for="IsRemembered">Remember me?</label>
        </div>
        <hr />
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
        <div class="text-center">
            <p><a href="">Forgot your password?</a></p>
            <p><a href="">Register as a new user</a></p>
        </div>
    </div>
</form>