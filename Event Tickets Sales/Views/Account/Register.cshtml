@model RegisterUserFormModel

@{
	ViewData["Title"] = "Register";
}

<form asp-controller="Account" asp-action="Register" method="post">

    @if (ViewBag.Registered != null)
    {
        <div class="alert alert-warning alert-dismissible fade show text-center offset-3 col-6" role="alert">
            <p>User already exists!</p>
        </div>
    }
    else if (ViewBag.SuccessfullyAdded != null)
    {
        <div class="alert alert-success alert-dismissible fade show text-center offset-3 col-6" role="alert">
            <p>User has been successfully added!</p>
        </div>
    }

    <div class="text-center">
        <h3>Register</h3>
    </div>

    <div class="form-group text-center row offset-3 col-6">
        <hr />
        <div class="form-group col-md-6 mb-4">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" type="text" class="form-control" placeholder="Username...">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 mb-4">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" type="email" class="form-control" placeholder="Email...">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group text-center row offset-3 col-6">
        <div class="form-group col-md-6 mb-4">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password...">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 mb-4">
            <label asp-for="ConfirmPassword" class="form-label"></label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password...">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group text-center row offset-3 col-6">
        <hr />
        <div class="form-group col-md-6 mb-4">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name...">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 mb-4">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name...">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group text-center row offset-3 col-6">
        <div class="form-group col-md-12 mb-12">
            <label asp-for="UCN" class="form-label"></label>
            <input asp-for="UCN" type="text" class="form-control" placeholder="Universal Citizen Number...">
            <span asp-validation-for="UCN" class="text-danger"></span>
            <hr />
        </div>
    </div>

    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</form>