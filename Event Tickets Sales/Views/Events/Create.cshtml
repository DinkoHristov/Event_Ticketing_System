@model EventFormModel

@{
	ViewData["Title"] = "Create Event";
}

<form asp-controller="Events" asp-action="Create" method="post">

    @if (ViewBag.Exists != null)
    {
        <div class="alert alert-warning alert-dismissible fade show text-center offset-3 col-6" role="alert">
            <p>Event already exists!</p>
        </div>
    }
    else if (ViewBag.SuccessfullyAdded != null)
    {
        <div class="alert alert-success alert-dismissible fade show text-center offset-3 col-6" role="alert">
            <p>Event has been successfully added!</p>
        </div>
    }

    <div class="text-center">
        <h3>Create Event</h3>
    </div>

    <div class="form-group text-center row offset-3 col-6">
        <hr />
        <div class="form-group col-md-6 mb-4">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Iron Maiden - Hills of Rock">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 mb-4">
            <label asp-for="Place" class="form-label"></label>
            <input asp-for="Place" type="text" class="form-control" placeholder="Plovdiv, Bulgaria">
            <span asp-validation-for="Place" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group text-center row offset-3 col-6">
        <hr />
        <div class="form-group col-md-6 mb-4">
            <label asp-for="Start" class="form-label"></label>
            <input asp-for="Start" type="datetime" class="form-control" placeholder="20-Jul-2016 22:00">
            <span asp-validation-for="Start" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 mb-4">
            <label asp-for="End" class="form-label"></label>
            <input asp-for="End" type="datetime" class="form-control" placeholder="20-Aug-2018 04:00">
            <span asp-validation-for="End" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group text-center row offset-3 col-6">
        <hr />
        <div class="form-group col-md-6 mb-4">
            <label asp-for="TotalTickets" class="form-label"></label>
            <input asp-for="TotalTickets" type="text" class="form-control" placeholder="1000">
            <span asp-validation-for="TotalTickets" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 mb-4">
            <label asp-for="PricePerTicket" class="form-label"></label>
            <input asp-for="PricePerTicket" type="text" class="form-control" placeholder="150">
            <span asp-validation-for="PricePerTicket" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group text-center">
        <hr class="form-group text-center row offset-3 col-6" />
        <button type="submit" class="btn btn-primary">Create Event</button>
    </div>
</form>